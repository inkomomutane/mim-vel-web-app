{
    "compilerOptions": {
        "allowJs": true,
        "module": "ESNext",
        "moduleResolution": "bundler",
        "jsx": "preserve",
        "strict": true,
        "isolatedModules": true,
        "target": "ESNext",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "skipLibCheck": true,
        "paths": {
            "@/*": ["./resources/js/*"]
        },
        "typeRoots": ["./node_modules/@types",
          "./resources/js/types",
          "./resources/js/website"
        ]
    },
    "include": [
      "application/resources/js/**/*.ts",
      "application/resources/js/**/*.d.ts",
      "application/resources/js/**/*.vue",
      "resources/js/website/welcomeBanner.ts",
      "application/resources/js/errors.js",
      "application/resources/js/nice-selectjs.js"
    ]
}
